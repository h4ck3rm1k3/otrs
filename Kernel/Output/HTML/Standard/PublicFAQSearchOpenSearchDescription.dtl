<?xml version="1.0" encoding="utf-8" ?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
<ShortName>$Quote{"$Config{"ProductName"}"} - $Text{"Public"} ($Quote{"$Config{"FAQ::FAQHook"}"})</ShortName>
<Description>$Quote{"$Config{"ProductName"}"} - $Text{"Public"} ($Quote{"$Config{"FAQ::FAQHook"}"})</Description>
<InputEncoding>$Env{"UserCharset"}</InputEncoding>
<Url type="text/html" template="$Config{"HttpType"}://$Env{"HTTP_HOST"}$Env{"Baselink"}Action=PublicFAQSearch;Subaction=Search;Number={searchTerms}" />
<Image height="16" width="16" type="image/x-icon">$Config{"HttpType"}://$Env{"HTTP_HOST"}$Config{"Frontend::ImagePath"}icons/product.ico</Image>
</OpenSearchDescription>
