<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            <div title="$Env{"Box0"} $Text{"Delete"} $Config{"ITSMWorkOrder::Hook"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"} $QData{"WorkOrderTitle"}">
                $Env{"Box0"} $Text{"Delete"} $Config{"ITSMWorkOrder::Hook"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"} $QData{"WorkOrderTitle","70"}
            </div>
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}$Env{"LastWorkOrderView"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <table border="0" width="550" align="center" cellspacing="0" cellpadding="4">
                <tr>
                    <td class="contenthead">$Text{"Delete"} $Config{"ITSMWorkOrder::Hook"} $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"}</td>
                </tr>
<!-- dtl:block:NoWorkOrderInCondition -->
                <tr class="contentbody">
                    <td class="contentbody">
                        <table border="0" width="100%" cellspacing="0" cellpadding="3">
                            <colgroup>
                                <col width="130">
                                <col>
                            </colgroup>
                            <tr>
                                <td class="contentkey">$Text{"Title"}:</td>
                                <td class="contentvalue">$QData{"WorkOrderTitle"}</td>
                            </tr>
                            <tr>
                                <td colspan="2">&nbsp;</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="contentkey">$Text{"Do you really want to delete this workorder?"}</td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="contentfooter">
                        <table width="100%" border="0" cellspacing="0" cellpadding="1">
                            <colgroup>
                                <col>
                                <col width="10">
                            </colgroup>
                            <tr>
                                <td class="contentfooter">
                                    <form action="$Env{"CGIHandle"}" method="post">
                                        <input type="hidden" name="Action"    value="AgentITSMWorkOrderZoom">
                                        <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}"/>
                                        <input type="hidden" name="Subaction" value="">
                                        <input class="button" type="submit" value="$Text{"No"}"/>
                                    </form>
                                </td>
                                <td class="contentfooter">
                                    <form action="$Env{"CGIHandle"}" method="post">
                                        <input type="hidden" name="Action" value="$Env{"Action"}"/>
                                        <input type="hidden" name="Subaction" value="WorkOrderDelete"/>
                                        <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}"/>
                                        <input class="button" type="submit" value="$Text{"Yes"}"/>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
<!-- dtl:block:NoWorkOrderInCondition -->
<!-- dtl:block:WorkOrderInCondition -->
                <tr class="contentbody">
                    <td class="contentbody">
                        <table border="0" width="100%" cellspacing="0" cellpadding="3">
                            <colgroup>
                                <col width="130">
                                <col>
                            </colgroup>
                            <tr>
                                <td colspan="2" class="contentkey">$Text{"You can not delete this Workorder. It is used in at least one Condition!"}</td>
                            </tr>
                            <tr>
                                <td colspan="2">&nbsp;</td>
                            </tr>
                            <tr class="contenthead">
                                <td colspan="2" class="contenthead">$Text{"This Workorder is used in the following Condition(s)"}:</td>
                            </tr>
<!-- dtl:block:WorkOrderInConditionRow -->
                            <tr>
                                <td class="contentkey">$Text{"Condition Name"}:</td>
                                <td class="contentvalue">
                                    <a href="$Env{"Baselink"}$Data{"Link"}&amp;Action=AgentITSMChangeConditionEdit;ChangeID=$LQData{"ChangeID"};ConditionID=$LQData{"ConditionID"}">
                                    $QData{"Name"}
                                    </a>
                                </td>
                            </tr>
<!-- dtl:block:WorkOrderInConditionRow -->
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="contentfooter">
                        <table width="100%" border="0" cellspacing="0" cellpadding="1">
                            <tr>
                                <td class="contentfooter">&nbsp;</td>
                            </tr>
                        </table>
                    </td>
                </tr>
<!-- dtl:block:WorkOrderInCondition -->
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
