<!-- start form -->
<table border="0" width="100%" cellspacing="0" cellpadding="3">
  <tr>
    <td class="mainhead">
      $Env{"Box0"}$Text{"History of"} Config Item: $Data{"Name"}$Env{"Box1"}
    </td>
  </tr>
  <tr>
    <td class="menu">
      <a href="$Env{"Baselink"}Action=AgentITSMConfigItemZoom&ConfigItemID=$Data{"ConfigItemID"}&VersionID=$Data{"VersionID"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
    </td>
  </tr>
  <tr>
    <td class="mainbody">
      <table border="0" cellspacing="0" cellpadding="2" width="100%">
        <tr class="contenthead">
          <td>
            $Text{"Action"}:
          </td>
          <td>
            $Text{"Comment"}:
          </td>
          <td WIDTH="60" ALIGN="CENTER">
            $Text{"Zoom"}:
          </td>
          <td>
            $Text{"User"}:
          </td>
          <td>
            $Text{"Createtime"}:
          </td>
        </tr>
<!-- dtl:block:Row -->
# should i show  the zoom link?
        <dtl set $Data{"Link"} = "">
        <dtl if ($Data{"VersionID"} ne "0") { $Data{"Link"} = "&VersionID=$Data{"VersionID"}"; }>
        <tr class="$QData{"css"}">
          <td>
            $Quote{"$Data{"HistoryType"}"}
          </td>
          <td>
            <div title="$QData{"Comment"}">$QData{"Comment","100"}</div>
          </td>
          <td align="CENTER">
            <a href="$Env{"Baselink"}Action=AgentITSMConfigItemZoom&ConfigItemID=$Data{"ConfigItemID"}$Data{"Link"}" onmouseover="window.status='$JSText{"Zoom"}'; return true;" onmouseout="window.status='';">x</a>
          </td>
          <td>
            <div title="$Quote{"$Data{"UserLogin"} ($Data{"UserFirstname"} $Data{"UserLastname"})"}">
            $Quote{"$Data{"UserLogin"}"} ($Quote{"$Data{"UserFirstname"} $Data{"UserLastname"}","20"})
            </div>
          </td>
          <td>
            $TimeLong{"$Data{"CreateTime"}"}
          </td>
        </tr>
<!-- dtl:block:Row -->
        <tr class="contenthead">
          <td colspan="5">&nbsp;</td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- end form -->
