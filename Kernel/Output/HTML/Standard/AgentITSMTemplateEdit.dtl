<script type="text/javascript">
<!--

function submit_compose() {

    // check the template name, all whitespace counts as empty
    if (document.compose.TemplateName.value.match(/^\s*$/)) {
        alert('$JSText{"A template must have a name!"}');
        document.compose.TemplateName.focus();

        return false;
    }

    return true;
}

//-->
</script>

<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            <div title="$Env{"Box0"}$Text{"Edit"} $Text{"TemplateType::$QData{"Type"}"} $Text{"Template"} $QData{"Name"} $Env{"Box1"}">
                $Env{"Box0"}$Text{"Edit"} $Text{"TemplateType::$QData{"Type"}"} $Text{"Template"} $QData{"Name"} $Env{"Box1"}
            </div>
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}$Env{"LastScreenTemplates"}" onmouseover="window.status='$JSText{"Back"}'; return true;" onmouseout="window.status='';" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <form action="$Env{"CGIHandle"}" method="post" name="compose">
                <input type="hidden" name="Action"     value="$Env{"Action"}">
                <input type="hidden" name="Subaction"  value="UpdateTemplate">
                <input type="hidden" name="TemplateID" value="$QData{"TemplateID"}">
                <table border="0" width="800" align="center" cellspacing="0" cellpadding="4">
                    <tr>
                        <td class="contenthead">$Text{"Edit Template"}</td>
                    </tr>
                    <tr class="contentbody">
                        <td>
                            <table border="0" width="100%" cellspacing="0" cellpadding="3">
                                <colgroup>
                                    <col width="130"/>
                                </colgroup>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Template Name"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        <input type="text" name="TemplateName" value="$QData{"TemplateName"}" size="70" maxlength="250">
<!-- dtl:block:InvalidTemplateName -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidTemplateName -->
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Comment"}:
                                    </td>
                                    <td class="contentvalue">
                                        <input type="text" name="Comment" value="$QData{"Comment"}" size="70" maxlength="250">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">$Text{"Valid"}: </td>
                                    <td class="contentvalue">$Data{"ValidSelectionString"}</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="contentfooter">
                            <input class="button" id="submitEditTemplate" accesskey="g" type="submit" name="EditTemplate" value="$Text{"Save"}" onclick="return submit_compose();"/>
                        </td>
                    </tr>
                </table>
            </form>
            <br>
        </td>
    </tr>
</table>
