$Include{"AJAX"}

$Include{"AgentITSMUserSearch"}
$Include{"AgentITSMCABMemberSearch"}

<style type="text/css">
.myAutoComplete {
    width:          32em;    /* set width here or else widget will expand to fit its container */
    padding-bottom: 0.5em;
}
</style>

<script language="JavaScript" type="text/javascript">
<!--
