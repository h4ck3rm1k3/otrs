<div class="MainBox ARIARoleMain LayoutFixedSidebar SidebarFirst">
    <h1>$Text{"Add"}: $Text{"Config Item"}</h1>

    <div class="SidebarColumn">
        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Actions"}</h2>
            </div>
            <div class='Content'>
                <ul class="ActionList">
                    <li>
                        <form action="$Env{"CGIHandle"}" method="get">
                            <input type="hidden" name="Action" value="AgentITSMConfigItemSearch"/>
                            <input type="hidden" name="Subaction" value="Attribute"/>

                            <div>$Data{"ClassOptionStrg"}</div>
                            <button class="CallForAction" type="submit" value="$Text{"Search"}">
                                <span>$Text{"Search Config Item"}</span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="ContentColumn">
        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"List"}</h2>
            </div>
            <div class="Content">
                <table class="DataTable">
                    <thead>
                        <tr>
                            <th class="W100pc">Classes</th>
                        </tr>
                    </thead>
                    <tbody>
<!-- dtl:block:OverviewItemList -->
                        <tr>
                            <td>
                                <a href="$Env{"Baselink"}Action=AgentITSMConfigItemEdit;ClassID=$QData{"ClassID"}">$QData{"Name"}</a>
                            </td>
                        </tr>
<!-- dtl:block:OverviewItemList -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="Clear"></div>
</div>