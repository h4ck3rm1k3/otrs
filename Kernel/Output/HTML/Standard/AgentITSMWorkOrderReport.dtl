<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            <div title="$Env{"Box0"}$Text{"Edit"} $Text{"Report of"} $Text{"WorkOrder#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}">
                $Env{"Box0"}$Text{"Edit"} $Text{"Report of"} $Text{"WorkOrder#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}
            </div>
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}Action=AgentITSMWorkOrderZoom&WorkOrderID=$QData{"WorkOrderID"}" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <table border="0" width="800" align="center" cellspacing="0" cellpadding="4">
                <form action="$Env{"CGIHandle"}" method="post">
                    <input type="hidden" name="Action"    value="$Env{"Action"}">
                    <input type="hidden" name="Subaction" value="Save">
                    <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}">
                    <tr>
                        <td class="contenthead">$Text{"Report"}</td>
                    </tr>
                    <tr class="contentbody">
                        <td>
                            <table border="0">
                                <tr>
                                    <td class="contentkey">$Text{"Report"}:</td>

                                    <td class="contentvalue">
                                        <div>
<!-- dtl:block:RichText -->
$Include{"RichTextEditorITSM"}
<!-- dtl:block:RichText -->
<textarea id="RichText1" name="Report" rows="15" cols="$Config{"ITSM::Frontend::TextArea"}" wrap="$Env{"BrowserWrap"}">
$Data{"Report"}
</textarea>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="25%" class="contentkey">$Text{"State"}:</td>
                                    <td width="75%" class="contentvalue">$Data{"StateSelect"}</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="contentfooter">
                            <input class="button" type="submit" name="Submit" value="$Text{"Save"}">
                        </td>
                    </tr>
                </form>
            </table>
            <br>
        </td>
    </tr>
</table>
