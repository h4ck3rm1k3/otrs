<table border="0" width="100%" cellspacing="0" cellpadding="3">
    <tr>
        <td class="mainhead">
            <div title="$Env{"Box0"}$Text{"Edit"} $Text{"Work Order#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}">
                $Env{"Box0"}$Text{"Edit"} $Text{"Work Order#"}: $QData{"ChangeNumber"}-$QData{"WorkOrderNumber"} $Env{"Box1"}
            </div>
        </td>
    </tr>
    <tr>
        <td class="menu">
            <a href="$Env{"Baselink"}Action=AgentITSMWorkOrderZoom&WorkOrderID=$QData{"WorkOrderID"}" class="menuitem">$Text{"Back"}</a>
        </td>
    </tr>

    <tr>
        <td class="mainbody">
            <br>
            <form action="$Env{"CGIHandle"}" method="post">
                <input type="hidden" name="Action"    value="$Env{"Action"}">
                <input type="hidden" name="Subaction" value="Save">
                <input type="hidden" name="WorkOrderID" value="$QData{"WorkOrderID"}">
                <table border="0" width="800" align="center" cellspacing="0" cellpadding="4">
                    <tr>
                        <td class="contenthead">$Text{"WorkOrder"}</td>
                    </tr>
                    <tr class="contentbody">
                        <td>
                            <table border="0">
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Title"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        <input type="text" name="WorkOrderTitle" value="$QData{"WorkOrderTitle"}" size="70">
<!-- dtl:block:InvalidTitle -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidTitle -->
                                    </td>
                                </tr>
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Instruction"}:
                                    </td>
                                    <td class="contentvalue">
                                        <div>
<!-- dtl:block:RichText -->
$Include{"RichTextEditorITSM"}
<!-- dtl:block:RichText -->
                                            <textarea id="RichText1" name="Instruction" rows="15" cols="$Config{"Ticket::Frontend::TextAreaEmail"}" wrap="$Env{"BrowserWrap"}">$Data{"Instruction"}</textarea>
                                        </div>
                                    </td>
                                </tr>
<!-- dtl:block:PlannedStartTime -->
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Planned start time"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        $Data{"PlannedStartTimeString"}
<!-- dtl:block:InvalidPlannedStartTime -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidPlannedStartTime -->
                                    </td>
                                </tr>
<!-- dtl:block:PlannedStartTime -->
<!-- dtl:block:PlannedEndTime -->
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Planned end time"}:
                                        <font color="red" title="$Text{"Required"}">*</font>
                                    </td>
                                    <td class="contentvalue">
                                        $Data{"PlannedEndTimeString"}
<!-- dtl:block:InvalidPlannedEndTime -->
                                        <br />
                                        <font color="red" size="-2">$Text{"Input invalid"}</font>
<!-- dtl:block:InvalidPlannedEndTime -->
                                    </td>
                                </tr>
<!-- dtl:block:PlannedEndTime -->
                                <tr>
                                    <td class="contentkey">
                                        $Text{"Attachment"}:
                                    </td>
                                    <td class="contentvalue">
                                        <table width="100%">
<!-- dtl:block:AttachmentRow -->
                                            <tr>
                                                <td>$Data{"AttachmentName"}</td>
                                                <td>$Data{"AttachmentSize"}</td>
                                                <td></td>
                                            </tr>
<!-- dtl:block:AttachmentRow -->
                                            <tr>
                                                <td colspan="2"><input type="file" name="AttachmentNew"></td>
                                                <td><input type="submit" class="button" name="SaveAttachment" value="$Text{"Attach"}"></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="contentfooter">
                            <input class="button" type="submit" name="Submit" value="$Text{"Submit"}">
                        </td>
                    </tr>
                </table>
            </form>
            <br>
        </td>
    </tr>
</table>
