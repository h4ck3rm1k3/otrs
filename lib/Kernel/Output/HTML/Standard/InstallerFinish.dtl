<!-- dtl:block:Finish -->
<div class="Center">
    <ul id="ProgressBar" class="ProgressBarElements4 SpacingTop SpacingBottom">
        <li class="Highlighted NoLink First">
            <span>
                <a href="#">$Text{"Step %s", "1"}<span>$Text{"License"}</span></a>
            </span>
        </li>
        <li class="Highlighted NoLink">
            <span>
                <a href="#">$Text{"Step %s", "2"}<span>$Text{"Database Settings"}</span></a>
            </span>
        </li>
        <li class="Highlighted NoLink">
            <span>
                <a href="#">$Text{"Step %s", "3"}<span>$Text{"General Specifications and Mail Settings"}</span></a>
            </span>
        </li>
        <li class="Highlighted Active NoLink Last">
            <span>
                <a href="#">$Text{"Step %s", "4"}<span>$Text{"Finish"}</span></a>
            </span>
        </li>
    </ul>
</div>

<div class="W50pc SpacingTop SpacingBottom CenterBox">
    <form action="$Env{"CGIHandle"}" method="post">
        <input type="hidden" name="Action"    value="Installer"/>
        <input type="hidden" name="Subaction" value="Finish"/>

        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"$Data{"Item"}"} ($Data{"Step"})</h2>
            </div>

            <div class="Content">
                <fieldset class="TableLike">

<!-- dtl:block:Restart -->
                    <p>
                        $Text{"To be able to use OTRS you have to enter the following line in your command line (Terminal/Shell) as root."}
                    </p>
                    <div class="Clear SpacingTop"></div>

                    <label>$Text{"Restart your webserver"}:</label>
                    <div class="Field Error">
                        $Data{"Webserver"}
                    </div>
                    <div class="Clear"></div>

                    <p class="SpacingTop">
                        $Text{"After doing so your OTRS is up and running."}
                    </p>
                    <div class="Clear SpacingTop"></div>
<!-- dtl:block:Restart -->
                    <label>$Text{"Start page"}:</label>
                    <div class="Field">
                        <a href="http://$Env{"HTTP_HOST"}/$Data{"OTRSHandle"}/index.pl">
                            http://$Env{"HTTP_HOST"}/$Data{"OTRSHandle"}/index.pl
                        </a>
                    </div>
                    <div class="Clear"></div>

                    <label>$Text{"User"}:</label>
                    <div class="Field">
                        root@localhost
                    </div>
                    <div class="Clear"></div>

                    <label>$Text{"Password"}:</label>
                    <div class="Field">
                        root
                    </div>
                    <div class="Clear"></div>

                    <div class="Field Center">
                        <p>((enjoy))</p>
                        <p>$Text{"Your OTRS Team"}</p>
                    </div>
                    <div class="Clear"></div>
                </fieldset>
            </div>
        </div>
    </form>
</div>
<!-- dtl:block:Finish -->
