  <Description Lang="en">A FAQ/knowledge base.</Description>
  <Description Lang="de">Eine FAQ-/Wissensdatenbank.</Description>
  <BuildDate>?</BuildDate>
  <BuildHost>?</BuildHost>
  <Filelist>
    <File Permission="644" Location="Kernel/Config/Files/FAQ.xml"></File>
    <File Permission="644" Location="Kernel/Language/de_FAQ.pm"></File>
    <File Permission="644" Location="Kernel/Language/en_FAQ.pm"></File>
    <File Permission="644" Location="Kernel/Modules/FAQ.pm"></File>
    <File Permission="644" Location="Kernel/Modules/AgentFAQ.pm"></File>
    <File Permission="644" Location="Kernel/Modules/CustomerFAQ.pm"></File>
    <File Permission="644" Location="Kernel/Modules/PublicFAQ.pm"></File>
    <File Permission="644" Location="Kernel/Output/HTML/LayoutFAQ.pm"></File>
    <File Permission="644" Location="Kernel/Output/HTML/Standard/FAQ.dtl"></File>
    <File Permission="644" Location="Kernel/Output/HTML/Standard/AgentFAQ.dtl"></File>
    <File Permission="644" Location="Kernel/Output/HTML/Standard/CustomerFAQ.dtl"></File>
    <File Permission="644" Location="Kernel/Output/HTML/Standard/PublicFAQ.dtl"></File>
    <File Permission="644" Location="Kernel/System/FAQ.pm"></File>
    <File Permission="644" Location="Kernel/System/LinkObject/FAQ.pm"></File>
    <File Permission="644" Location="scripts/test/FAQ.t"></File>
    <File Permission="644" Location="var/httpd/htdocs/images/Standard/faq-category-small.png"></File>
    <File Permission="644" Location="var/httpd/htdocs/images/Standard/faq-item-small.png"></File>
